<div class="container p-4">
    <div class="row">
        <div class="col-md-4 mx-auto">
            <div class="card text-center">
                <div class="card-header">
                    <h3 class="text-uppercase"> Editar un Producto </h3>
                </div>
                <div class="card-body">
                    <form action="/edit/{{productos.id}}" method="post"  enctype="multipart/form-data">

                        <div class="input-group mt-2">
                            <label for="referencia" class="input-group-text"> Referencia Telar </label>
                            <input class="form-control" type="text" name="referencia" id="referencia" placeholder="Ejemplo: Asistido 60 cm 4 marcos" value="{{productos.referencia}}" autofocus required >
                        </div>

                        <div class="input-group mt-2">
                            <label for="tipotelar" class="input-group-text"> Tipo Telar </label>
                            <input class="form-control" type="text" name="tipotelar" id="tipotelar" placeholder="Ejemplo: Telares Especiales" value="{{productos.tipotelar}}" required >
                        </div>

                        <div class="input-group mt-2">
                            <label for="precio" class="input-group-text"> Precio </label>
                            <input class="form-control" type="number" name="precio" id="precio" placeholder="0" value="{{productos.precio}}" required >
                        </div>

                        <div class="input-group mt-2">
                            <label for="descripcion" class="input-group-text"> Descripcion </label>
                            <input class="form-control" type="text" name="descripcion" id="descripcion" value="{{productos.descripcion}}" placeholder="Escriba una descripcion" required >
                        </div>

                        <div class="input-group mt-2">
                            <input class="form-control" type="file" name="file" id="file">
                        </div>

                        {{#if productos.imagen}}
                            <div class="input-group mt-2">
                                <img src="/uploads/{{productos.imagen}}" class="card-img-top mx-auto m-2 rounded-lg" style="width: 150px; height: 150px;display:block;">
                            </div>
                        {{/if}}

                        <div class="form-group mt-4 d-grid gap-2">
                            <button class="btn btn-success"> Actualizar </button>
                        </div>

                    </form>
                </div>
            </div>
        </div>
    </div>
</div>