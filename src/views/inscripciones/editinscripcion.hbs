                                <img src="/uploads/{{inscripciones.imagen}}" class="card-img-top mx-auto m-2 rounded-lg" style="width: 150px; height: 150px;display:block;">
                            </div>
                        {{/if}}
-->
                        <div class="form-group mt-4 d-grid gap-2">
                            <button class="btn btn-success"> Actualizar </button>
                        </div>

                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

